<p id="notice"><%= notice %></p>
<h1>Listing Users</h1>
<%if(current_user.isAdmin)%>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Job title</th>
      <th>Job assignment</th>
      <th>Email</th>
      <th>Supervisor Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user|
      @sn = "UNASSIGNED"
        if(user.supervisor)
            @sn = user.supervisor.last_name + ", " + user.supervisor.first_name
      end


    %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.job_title %></td>
        <td><%= user.job_assignment %></td>
        <td><%= user.email %></td>
        <td><%= @sn %></td>
        <td><%= link_to 'Show', user, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', user,class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

    <%else%>
    <p>ONLY ADMINS CAN VIEW ALL USERS</p>
<% end%>